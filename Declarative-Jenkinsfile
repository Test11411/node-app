currentBuild.displayName= "Online_shopping-#"+currentBuild.number

pipeline{
    agent any
    environment{
        DOCKER_TAG = getDockerTag()
    }
    stages{
        stage('Build Docker Image1 '){
            steps{
                sh "docker build . -t suman11411/nodeapp:${DOCKER_TAG}"
            }
        }
        stage('Push To DockerHub '){
            steps{
            withCredentials([string(credentialsId: 'DockerHubPwd1', variable: 'DockerHubPwd1')]) {
            sh "docker login -u Suman11411 -p ${DockerHubPwd1}"
            sh "docker push Suman11411/nodeapp:${DOCKER_TAG}"
        }
      }
    }
  }
}

def getDockerTag(){
    def tag  = sh script: 'git rev-parse HEAD', returnStdout: true
    return tag
}
