currentBuild.displayName= "Online_shopping-#"+currentBuild.number

pipeline{
    agent any
    environment{
        DOCKER_TAG = getDockerTag()
    }
    stages{
        stage('Build Docker Image1 '){
            steps{
                sh "docker build . -t suman46990/nodeapp:${DOCKER_TAG}"
            }
        }
        stage('Push To DockerHub '){
            steps{
            echo "Hello World 11 !"
            sh "docker login -u suman46990 -p Ravi&1990"
            echo "Hello World 22!"
            sh "docker push suman46990/nodeapp:${DOCKER_TAG}"
            echo "Hello World 33 !"
        
      }
    }
  }
}

def getDockerTag(){
    def tag  = sh script: 'git rev-parse HEAD', returnStdout: true
    return tag
}
